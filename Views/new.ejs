<%- include('partials/adminheader')%>

<style>
    body{
            background-image: url(https://coolbackgrounds.io/images/backgrounds/index/ranger-4df6c1b6.png);
            background-size: cover; 
          }
</style>



<div class="container">
    <div class="row">
          <h1 style="text-align: center;">Add a new Vehicle </h1>
       <div style="width:30%; margin: 0 auto">
            <form action="/vehicles" method="POST">
                <div class="form-group">
                    <input  class="form-control" type="text" name="name"  placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="image" placeholder="imagr url">
                </div>
                <div class="form-group">
                    <input  class="form-control" type="text" name="vehicleno"  placeholder="VehicleNo">
                </div>
                <div class="form-group">
                    <input  class="form-control" type="text" name="price"  placeholder="price">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text"  name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>  
            </form>
            <a href="/vehicles">Go Back</a>
       </div>
        
        
        
    </div>   
</div>



